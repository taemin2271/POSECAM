{
  "manifest_version": 3,
  "name": "PoseCam (자세 교정기)",
  "version": "1.1.0",
  "description": "새 탭에서 100% 작동하는 자세 교정기",
  
  "action": {
    "default_title": "PoseCam 실행"
  },
  
  "permissions": [
    "camera",
    "notifications"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}